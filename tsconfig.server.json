{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "noEmit": false,
    "incremental": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test", "**/*spec.ts"],
  "include": ["server"]
}
